---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Proyectos",
    path: "/mi-portafolio/#resume",
  },
  {
    title: "Habilidades",
    path: "/mi-portafolio/#lenguajes",
  },
  {
    title: "Sobre m√≠",
    path: "/mi-portafolio/about",
  },
  {
    title: "Contacto",
    path: "mailto:castellanos.anggie17@gmail.com?subject=Contacto desde tu portafolio",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/mi-portafolio/" class="text-lg">
          <span class="font-bold text-slate-800">Inicio</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <li>
                <a
                  href={
                    item.path.startsWith("#")
                      ? `/mi-portafolio${item.path}`
                      : item.path
                  }
                  class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900"
                >
                  <span>{item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4" style="display: none;">
        <a href="#">Log in</a>
        <Link href="#" size="md">Sign up</Link>
      </div>
    </div>
  </header>
</Container>
